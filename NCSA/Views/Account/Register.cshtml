@model NCSA.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="login">
    <div class="login__box">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()

            <div class="login__box-titlebig pb-lg">Create New User</div>
            if (!ViewData.ModelState.IsValid && ViewContext.ViewData.ModelState.Where(x => x.Key == "").Any())
            {
                <div class="validation-alert">
                    @Html.ValidationSummary(true, "", new { @class = "" })
                </div>
            }

            <div class="input__group">
                @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", type = "email", @class = "input", autofocus = "autofocus" })
                @Html.LabelFor(m => m.Email, new { @class = "label" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "validation-error" })
            </div>
            <div class="input__group">
                @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "input" })
                @Html.LabelFor(m => m.Password, new { @class = "label" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "validation-error" })
            </div>
            <div class="input__group">
                @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm password", @class = "input" })
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "label" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "validation-error" })
            </div>
            <input type="submit" value="Confirm password" class="bttn bttn-secondary login__box-button" />
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
