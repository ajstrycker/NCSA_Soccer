@model NCSA.ViewModel.PlayerDetailsVM
@{
    ViewBag.Title = "AdminPlayers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="admin">
    <div class="common-header">
        <div class="common-header-title">
            @Model.player.PlayerFirstName @Model.player.PlayerLastName
        </div>
    </div>

    @Html.Partial("AdminNav")

    <div class="admin__edit">
        <a href="/admin/players" class="admin__edit__link">&larr; Back to All Players</a>

        <div class="adminInputGroup">
            <div class="adminLabel">Player Name</div>
            <div class="adminDisplay">@Model.player.PlayerFirstName @Model.player.PlayerLastName</div>
        </div>
        <div class="adminInputGroup">
            @Html.LabelFor(model => model.Team, htmlAttributes: new { @class = "adminLabel" })
            <div class="adminDisplay">@Model.Team</div>
        </div>
        <div class="adminInputGroup">
            @Html.LabelFor(model => model.player.Email, htmlAttributes: new { @class = "adminLabel" })
            <div class="adminDisplay">@Model.player.Email</div>
        </div>
        <div class="adminInputGroup">
            @Html.LabelFor(model => model.player.BirthDate, htmlAttributes: new { @class = "adminLabel" })
            <div class="adminDisplay">@Model.player.BirthDate.ToString("MM/dd/yyyy")</div>
        </div>
        <div class="adminInputGroup">
            @Html.LabelFor(model => model.player.ShirtSize, htmlAttributes: new { @class = "adminLabel" })
            <div class="adminDisplay">@Model.player.ShirtSize</div>
        </div>
        <div class="adminInputGroup">
            <div class="adminLabel">Parent Name</div>
            <div class="adminDisplay">@Model.player.ParentFirstName @Model.player.ParentLastName</div>
        </div>
        <div class="adminInputGroup">
            @Html.LabelFor(model => model.player.PhoneNumber, htmlAttributes: new { @class = "adminLabel" })
            <div class="adminDisplay">@Model.player.PhoneNumber</div>
        </div>
        <div class="adminInputGroup">
            <div class="adminLabel">Street Address</div>
            <div class="adminDisplay">@Model.player.Addr1 @Model.player.Addr2</div>
        </div>
        <div class="adminInputGroup">
            <div class="adminLabel">City State, Zip</div>
            <div class="adminDisplay">@Model.player.City @Model.player.State  , @Model.player.Zip</div>
        </div>
        <div class="adminInputGroup">
            @Html.LabelFor(model => model.player.SignUpDate, htmlAttributes: new { @class = "adminLabel" })
            <div class="adminDisplay">@Model.player.SignUpDate.ToString("MM/dd/yyyy")</div>
        </div>
    </div>
</div>

